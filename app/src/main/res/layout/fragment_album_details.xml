<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="12dp"
    android:scrollbars="none"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/human_nature"
            android:layout_marginTop="22dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="34sp"
            android:text="Human Nature"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="#888"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_lancamento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ano de LanÃ§amento: 2020"
            android:textSize="16sp"
            android:textColor="#BBB"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_tracklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tracklist"
            android:textSize="16sp"
            android:textColor="#BBB"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tracks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            tools:listitem="@layout/item_list_track"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.core.widget.NestedScrollView>